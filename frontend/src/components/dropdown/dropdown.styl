@import "~css/variables.styl"

.container
  background transparent
  position relative

.dropdown
  position absolute
  z-index 2
  display none
  transition display 1s linear
  border-radius 2px
  background-color $white
  box-sizing border-box
  min-width 130px
  box-shadow 0 1px 2px 0 rgba(51, 60, 72, 0.3)
  border solid 1px $gray
  padding 10px 0
  right 0

.show
  display block

.action
  cursor pointer
  height 24px
  width 24px
