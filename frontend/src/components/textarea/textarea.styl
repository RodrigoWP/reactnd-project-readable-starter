@import '~css/variables.styl'

.container

  > textarea
    background-color $white
    font-size 14px
    width 100%
    height 100px
    padding 11px 16px
    outline 0
    border 1px
    border-radius 2px
    box-shadow inset -1px 0 0 0 $gray, inset 0 -1px 0 0 $gray, inset 1px 0 0 0 $gray, inset 0 2px 0 0 $blueSemiLight
    transition .25s box-shadow
    text-indent 0
    resize none
    box-sizing border-box
    color $black

    &:focus {
      box-shadow inset -1px 0 0 0 $gray, inset 0 -1px 0 0 $gray, inset 1px 0 0 0 $gray, inset 0 2px 0 0 $blueSemiDark
    }

  > label
    line-height 1.8rem
    font-size 12px
    font-weight 600
    text-transform uppercase
    color #3b495e