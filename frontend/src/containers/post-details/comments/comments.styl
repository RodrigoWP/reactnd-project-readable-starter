@import '~css/variables.styl'

.container
  width 100%
  margin-top 50px

  > span
    color $black
    font-size 16px
    font-weight 600
    font-family $blogFont

  > textarea
    width 100%
    height 100px
    padding 12px 20px
    border-radius 2px
    border 1px solid $graySemiLight
    resize none
    font-family $blogFont
    margin-top 10px

.actions
  display flex
  width 280px
  justify-content space-between
  margin-top 10px

.comments
  display flex
  flex-direction column
  margin-top 20px