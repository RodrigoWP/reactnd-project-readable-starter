@import '~css/variables.styl'

.container
  height 60px
  display flex
  justify-content center
  align-items flex-start
  flex-direction column
  position relative
  border-bottom 1px solid $gray

  > span
    font-family $blogFont
    font-size 16px

  > span:nth-child(1)
    color $blackDark

  > span:nth-child(2)
    color $blackLight