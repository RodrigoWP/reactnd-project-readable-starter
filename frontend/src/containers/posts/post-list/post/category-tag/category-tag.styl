@import "~css/variables.styl"

.container
  position absolute
  left -5px
  top -5px
  z-index 1
  overflow hidden
  width 75px
  height 75px
  text-align right

.tag
  width 100px
  position absolute
  top 19px
  right -5px
  background-color $graySemiDark
  font-size 14px
  font-weight 600
  font-family $blogFont
  line-height 20px
  text-align center
  transform rotate(-45deg)
  display block
  color white

  &:before
    content ""
    position absolute
    left 0
    top 100%
    z-index -1
    border-left 3px solid $grayDark
    border-top 3px solid $grayDark
    border-right 3px solid transparent
    border-bottom 3px solid transparent

  &:after
    content ""
    position absolute
    right 0
    top 100%
    z-index -1
    border-left 3px solid transparent
    border-top 3px solid $grayDark
    border-right 3px solid $grayDark
    border-bottom 3px solid transparent
